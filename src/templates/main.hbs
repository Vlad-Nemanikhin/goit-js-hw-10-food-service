
{{#each els}}
<li class="menu__item">
	<article class="card">
		<img src="{{image}}"
			alt="{{name}}" class="card__image" />
		<div class="card__content">
			<h2 class="card__name">{{name}}</h2>
			<p class="card__price">
				<i class="material-icons fas fa-usd-circle"></i>
				{{price}} кредитов
			</p>

			<p class="card__descr">
				{{description}}
			</p>

			<ul class="tag-list">
				{{#each this}}
				<li class="tag-list__item">{{ingredients}}</li>
				<li class="tag-list__item">{{ingredients}}</li>
				<li class="tag-list__item">{{ingredients}}</li>
				<li class="tag-list__item">{{ingredients}}</li>
				<li class="tag-list__item">{{ingredients}}</li>
				<li class="tag-list__item">{{ingredients}}</li>
				{{/each}}
			</ul>
		</div>

		<button class="card__button button">
			<i class="material-icons button__icon far fa-shopping-cart"> </i>
			В корзину
		</button>
	</article>
</li>
{{/each}}